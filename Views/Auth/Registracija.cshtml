@model RegistracijaViewModel

<div class="d-flex justify-content-center">
    <div class="w-50 border p-4 rounded shadow-sm bg-light">

        <h2 class="text-center mb-4">Registracija</h2>

        <form asp-action="Registracija" method="post">
            <div class="form-group mb-3">
                <label asp-for="Ime" class="form-label">Ime</label>
                <input asp-for="Ime" class="form-control" placeholder="Unesite ime" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Prezime" class="form-label">Prezime</label>
                <input asp-for="Prezime" class="form-control" placeholder="Unesite prezime" />
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Unesite email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Lozinka" class="form-label">Lozinka</label>
                <input asp-for="Lozinka" class="form-control" placeholder="Unesite lozinku" type="password" />
                <span asp-validation-for="Lozinka" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PotvrdaLozinke" class="form-label"></label>
                <input asp-for="PotvrdaLozinke" class="form-control" placeholder="Ponovo unesite lozinku" />
                <span asp-validation-for="PotvrdaLozinke" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="TipKorisnika" class="form-label">Tip korisnika</label>
                <select asp-for="TipKorisnika" class="form-select">
                    <option value="">-- Odaberite tip korisnika --</option>
                    <option value="Kupac">Kupac</option>
                    <option value="Umetnik">Umetnik</option>
                    <option value="Administrator">Administrator</option>
                </select>
                <span asp-validation-for="TipKorisnika" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">Registruj se</button>
        </form>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="text-danger mt-3">
                @Html.ValidationSummary()
            </div>
        }

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
