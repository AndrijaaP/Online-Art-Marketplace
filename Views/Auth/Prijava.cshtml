@model Prijava

<div class="d-flex justify-content-center">
    <div class="w-50 border p-4 rounded shadow-sm bg-light">

        <h2 class="text-center mb-4">Prijava</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <form asp-action="Prijava" method="post">
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Unesite email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Lozinka" class="form-label">Lozinka</label>
                <input asp-for="Lozinka" class="form-control" placeholder="Unesite lozinku" type="password" />
                <span asp-validation-for="Lozinka" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Prijavi se</button>
        </form>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="text-danger mt-3">
                @Html.ValidationSummary()
            </div>
        }
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
