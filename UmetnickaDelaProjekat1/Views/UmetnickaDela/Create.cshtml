@model UmetnickaDelaProjekat1.Models.UmetnickaDela

<h2>Dodaj novo umetničko delo</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Naziv" class="control-label"></label>
        <input asp-for="Naziv" class="form-control" />
        <span asp-validation-for="Naziv" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Opis" class="control-label"></label>
        <textarea asp-for="Opis" class="form-control"></textarea>
        <span asp-validation-for="Opis" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Umetnik" class="control-label"></label>
        <input asp-for="Umetnik" class="form-control" />
        <span asp-validation-for="Umetnik" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Kategorija" class="control-label"></label>
        <input asp-for="Kategorija" class="form-control" />
        <span asp-validation-for="Kategorija" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cena" class="control-label"></label>
        <input asp-for="Cena" class="form-control" />
        <span asp-validation-for="Cena" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fotografija" class="control-label"></label>
        <input asp-for="Fotografija" class="form-control" />
        <span asp-validation-for="Fotografija" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Dostupnost" class="control-label"></label>
        <select asp-for="Dostupnost" class="form-control">
            <option value="true">Dostupno</option>
            <option value="false">Nedostupno</option>
        </select>
        <span asp-validation-for="Dostupnost" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Dodaj" class="btn btn-primary mt-3" />
    </div>
</form>

<div>
    <a asp-action="Index">Nazad na listu</a>
</div>