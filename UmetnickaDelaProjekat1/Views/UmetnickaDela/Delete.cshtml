@model UmetnickaDelaProjekat1.Models.UmetnickaDela

<h2>Obriši umetničko delo</h2>

<h3>Da li ste sigurni da želite da obrišete ovo delo?</h3>
<div>
    <h4>@Model.Naziv</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Naziv</dt>
        <dd class="col-sm-10">@Model.Naziv</dd>
        <dt class="col-sm-2">Opis</dt>
        <dd class="col-sm-10">@Model.Opis</dd>
        <dt class="col-sm-2">Umetnik</dt>
        <dd class="col-sm-10">@Model.Umetnik</dd>
        <dt class="col-sm-2">Kategorija</dt>
        <dd class="col-sm-10">@Model.Kategorija</dd>
        <dt class="col-sm-2">Cena</dt>
        <dd class="col-sm-10">@Model.Cena</dd>
        <dt class="col-sm-2">Dostupnost</dt>
        <dd class="col-sm-10">@(Model.Dostupnost ? "Dostupno" : "Nedostupno")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        <a asp-action="Index">Nazad na listu</a>
    </form>
</div>