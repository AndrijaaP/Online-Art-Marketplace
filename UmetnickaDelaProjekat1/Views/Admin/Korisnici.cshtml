@model IEnumerable<UmetnickaDelaProjekat1.Models.Korisnici>

<h2 class="mb-4">Upravljanje korisnicima</h2>
<a class="btn btn-primary mb-3" asp-action="DodajKorisnika">Dodaj novog korisnika</a>

<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>Ime</th>
            <th>Prezime</th>
            <th>Email</th>
            <th>Tip korisnika</th>
            <th style="width: 140px;">Akcija</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.Ime</td>
                <td>@k.Prezime</td>
                <td>@k.Email</td>
                <td>@k.TipKorisnika</td>
                <td>
                    <div class="d-flex flex-wrap gap-1">
                        <a class="btn btn-sm btn-warning" asp-action="IzmeniKorisnika" asp-route-id="@k.Id">Izmeni</a>
                        <a class="btn btn-sm btn-danger" asp-action="ObrisiKorisnika" asp-route-id="@k.Id">Obriši</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

